{
	"name": "emmylua-codestyle",
	"displayName": "EmmyLuaCodeStyle",
	"description": "reformat lua code and lint lua code style",
	"keywords": [
		"lua",
		"emmylua",
		"format",
		"codestyle",
		"luaformat",
		"lua formatter",
		"lua codestyle",
		"lua spell"
	],
	"version": "1.1.3",
	"author": "CppCXY",
	"publisher": "CppCXY",
	"engines": {
		"vscode": "^1.75.1"
	},
	"repository": "https://github.com/CppCXY/EmmyLuaCodeStyle",
	"categories": [
		"Programming Languages",
		"Formatters",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:lua",
		"onCommand:emmyluacodestyle.insertEditorConfig"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "emmylua.codestyle.insertEditorConfig",
				"title": "insert luaCodeStyle template"
			}
		],
		"configuration": {
			"title": "EmmyLuaCodeStyle",
			"properties": {
				"emmylua.lint.codeStyle": {
					"type": "boolean",
					"default": true,
					"description": "enable code-style check"
				},
				"emmylua.lint.nameStyle": {
					"type": "boolean",
					"default": false,
					"description": "enable name-style check"
				},
				"emmylua.lint.spellCheck": {
					"type": "boolean",
					"default": true,
					"description": "enable spell check"
				},
				"emmylua.spell.dict": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"emmylua.name.config": {
					"type": "object",
					"items": {
						"type": [
							"array",
							"string"
						]
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.1",
		"@types/mocha": "^10.0.1",
		"@types/node": "18.13.0",
		"@types/vscode": "^1.75.1",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"@vscode/test-electron": "^2.2.3",
		"download": "^8.0.0",
		"eslint": "^8.34.0",
		"glob": "^8.1.0",
		"mocha": "10.2.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"vscode-languageclient": "8.0.2"
	}
}